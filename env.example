# ========================================
# CONFIGURATION DE BASE
# ========================================

# Base de données Supabase (PostgreSQL)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Secret pour les sessions (générer avec: openssl rand -base64 32)
SESSION_SECRET=your-session-secret-here

# Port du serveur
PORT=5000

# ========================================
# CONFIGURATION SUPABASE
# ========================================

# URL Supabase
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co

# Clé anonyme Supabase
SUPABASE_ANON_KEY=your-supabase-anon-key

# Clé de service Supabase (optionnel)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ========================================
# CONFIGURATION STRIPE
# ========================================

# Clé secrète Stripe (mode test)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Secret webhook Stripe
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ========================================
# CONFIGURATION GOOGLE OAUTH
# ========================================

# Client ID Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Client Secret Google OAuth
GOOGLE_CLIENT_SECRET=your-google-client-secret

# URL de redirection Google OAuth (optionnel, auto-détectée)
GOOGLE_REDIRECT_URI=https://your-domain.vercel.app/api/oauth/google/callback

# ========================================
# SERVICES EXTERNES (OPTIONNELS)
# ========================================

# OpenAI API pour le scoring IA avancé
OPENAI_API_KEY=sk-your-openai-api-key

# Apollo API pour la génération de leads
APOLLO_API_KEY=your-apollo-api-key

# ========================================
# CONFIGURATION ENVIRONNEMENT
# ========================================

# Environnement (development, production)
NODE_ENV=development 